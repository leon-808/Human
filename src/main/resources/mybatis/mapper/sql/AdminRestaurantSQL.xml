	</select>

	<insert id="insertRestaurant">
		insert into restaurant
		(lat,lng,primecode,r_name,owner,category,address,localurl) 
		select adrt_lat,adrt_lng,adrt_primecode,adrt_r_name,adrt_owner,
		adrt_category,adrt_address,adrt_localurl from adrt_restaurant 
		where adrt_primecode=#{param1}
